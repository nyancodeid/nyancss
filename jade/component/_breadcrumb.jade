							a(href="#") Home
							a(href="#") Profile
							a.active(href="#") Ryan Aunur Rassyid

						h5 Material Breadcrumb default
						.ny-breadcrumb--material
							a(href="#") Home
							a(href="#") Profile
							a.active(href="#") Ryan Aunur Rassyid

						h5 Material Breadcrumb with #[span.ny-code .ny-primary]
						.ny-breadcrumb--material.ny-primary.no-counter
							a(href="#") Home
