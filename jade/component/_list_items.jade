- var page = "List Items"


doctype html
html(lang="en")
	head
		include ../_head
		include ../_seo
	body(ny-app)
		div.clearfix.main-container.ny-flex--row
			include ../_sidebar
			div(class="col-md-9 col-sm-12 col-xs-12 main-content ny-content")
				main
					div.ny-jumbotron.ny-whiteframe-3dp
						h1 Nyan.CSS
						p a modern css framework with smooth and light design.
						span.version #{appVersion}
						span.lastCommit #{appLastCommit}

					// Content Here
					section#listitem
						h3.title List Item
						hr
						p
							| Make div parent element with 
							span.ny-code class=&quot;ny-lists&quot;
							| , and for Child Item Element add div with 
							span.ny-code class=&quot;ny-list-item&quot;
							| . For text title or header add div element with 
							span.ny-code class=&quot;ny-list-item-text&quot;
							|	inside 
							span.ny-code ny-list-item
							| .
						p
							| in default List Item not present border at bottom, to show them replace 
							span.ny-code class=&quot;ny-list-item&quot;
							|	to 
							span.ny-code class=&quot;ny-list-item--bordered&quot;
						.example.row.clearfix
							.col-md-6.col-xs-12
								.ny-lists
									.ny-card-title Example List Item
									span.ny-subheader Normal List Item
									// List Item
									- for (var i = 0; i < 3; ++i) {
										.ny-list-item
											img.ny-circle(src='vendor/img/avatar.png', alt='')
